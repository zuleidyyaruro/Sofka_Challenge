doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        title=title
    body 
        nav(class="navbar navbar-expand-lg navbar-dark bg-primary")
                div(class="container-fluid")
                    a(class="navbar-brand" href="#") Sofka Challenge
                    button(class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                        span(class="navbar-toggler-icon")
        
        h2(class="text-center mt-5") You Win!
        h2(class="text-center")=username 
        h3(class="text-center") Points Earned: 
            span=points_earned
        
        div(class="d-flex justify-content-center mt-5") 
            div 
                a(href="/first-question" class="mx-2 btn btn-primary") Play Again 
            div 
                a(href="/" class="btn btn-danger mx-2") Exit  
                    
            